<!-- Hero Section -->
<section class="bg-gradient-to-br from-indigo-600 via-purple-600 to-blue-700 text-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-20 text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-6 leading-tight">
      <%= @article.title %>
    </h1>
    <p class="text-xl md:text-2xl opacity-90 leading-relaxed max-w-2xl mx-auto">
      <%= raw(@article.text.truncate(150)) %>
    </p>
  </div>
</section>

