<div class="">
  <div class="bg-white">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">Add Pages to Theme: <%= @theme.name %></h3>
    </div>
    <div class="p-6">
      <% if @errors&.any? %>
        <div class="mb-6 bg-red-50 border border-red-200 rounded-md p-4">
          <ul class="text-red-600 text-sm space-y-1">
            <% @errors.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Display existing pages -->
      <% if @existing_pages.any? %>
        <div class="mb-8">
          <h4 class="text-md font-medium text-gray-500 mb-4">Current Pages</h4>
          <div class="space-y-2">
            <% @existing_pages.each_with_index do |page, index| %>
              <div class="bg-gray-50 rounded-lg border border-gray-200 p-4">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-center">
                  <div>
                    <span class="font-semibold text-gray-900"><%= page["page_name"] %></span>
                  </div>
                  <div>
                    <% if page["page_slug"] == '/' %>
                      <span class="text-gray-600"><%= page["page_slug"] %></span>
                    <% else %>
                      <span class="text-gray-600">/<%= page["page_slug"] %></span>
                    <% end %>
                  </div>
                  <div>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      <%= page["package_type"] %>
                    </span>
                  </div>
                  <div class="text-right">
                    <span class="text-sm text-gray-500">Position: <%= page["position"] %></span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <hr class="my-8 border-gray-200">
        </div>
      <% end %>

      <!-- Form for adding new pages -->
      <h4 class="text-md font-medium text-blue-600 mb-4">Add New Pages</h4>

      <%= form_with url: admin_create_pages_path(@theme), method: :post, local: true, id: "pages-form" do |form| %>
        <div id="pages-container">
          <% @new_pages.each_with_index do |page, index| %>
            <div class="page-form bg-white border border-gray-200 rounded-lg shadow-sm mb-4" data-index="<%= index %>">
              <div class="px-4 py-3 bg-gray-50 border-b border-gray-200 rounded-t-lg flex justify-between items-center">
                <h5 class="font-medium text-gray-900">Page <%= index + 1 %></h5>
                <% if index > 0 %>
                  <button type="button" class="remove-page inline-flex items-center px-3 py-1 border border-red-300 text-sm leading-4 font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" data-index="<%= index %>">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    Remove
                  </button>
                <% end %>
              </div>
              <div class="p-4">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                  <div>
                    <label for="new_pages_<%= index %>_page_name" class="block text-sm font-medium text-gray-700 mb-1">Page Name</label>
                    <%= text_field_tag "new_pages[#{index}][page_name]", page["page_name"],
                                       class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                                       required: true,
                                       placeholder: "e.g., Home, About Us, Contact" %>
                  </div>

                  <div>
                    <label for="new_pages_<%= index %>_page_slug" class="block text-sm font-medium text-gray-700 mb-1">Page Slug</label>
                    <%= text_field_tag "new_pages[#{index}][page_slug]", page["page_slug"],
                                       class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                                       required: true,
                                       placeholder: "e.g., home, about-us, contact" %>
                  </div>

                  <div>
                    <label for="new_pages_<%= index %>_package_type" class="block text-sm font-medium text-gray-700 mb-1">Package Type</label>
                    <%= select_tag "new_pages[#{index}][package_type]",
                                   options_for_select([
                                                        ['Select Package Type', ''],
                                                        ['Bespoke', 'Bespoke'],
                                                        ['Standard', 'Standard'],
                                                        ['Premium', 'Premium']
                                                      ], page["package_type"]),
                                   class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                                   required: true %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="mt-6 pt-4 border-t border-gray-200 flex justify-between">
          <button type="button" id="add-page" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Add Another Page
          </button>
          <div class="flex space-x-3">
            <%= link_to admin_theme_path(@theme), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              Back to Theme
            <% end %>
            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path>
              </svg>
              Save All Pages
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        let formIndex = <%= @new_pages.length %>;

        // Add new page form
        document.getElementById('add-page').addEventListener('click', function() {
            const container = document.getElementById('pages-container');
            const newForm = createPageForm(formIndex);
            container.insertAdjacentHTML('beforeend', newForm);
            formIndex++;
        });

        // Remove page form
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('remove-page') || e.target.closest('.remove-page')) {
                const button = e.target.classList.contains('remove-page') ? e.target : e.target.closest('.remove-page');
                const formElement = button.closest('.page-form');
                formElement.remove();
                updateFormNumbers();
            }
        });

        function createPageForm(index) {
            return `
      <div class="page-form bg-white border border-gray-200 rounded-lg shadow-sm mb-4" data-index="${index}">
        <div class="px-4 py-3 bg-gray-50 border-b border-gray-200 rounded-t-lg flex justify-between items-center">
          <h5 class="font-medium text-gray-900">Page ${index + 1}</h5>
          <button type="button" class="remove-page inline-flex items-center px-3 py-1 border border-red-300 text-sm leading-4 font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" data-index="${index}">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Remove
          </button>
        </div>
        <div class="p-4">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label for="new_pages_${index}_page_name" class="block text-sm font-medium text-gray-700 mb-1">Page Name</label>
              <input type="text" name="new_pages[${index}][page_name]"
                     id="new_pages_${index}_page_name" class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required
                     placeholder="e.g., Home, About Us, Contact">
            </div>

            <div>
              <label for="new_pages_${index}_page_slug" class="block text-sm font-medium text-gray-700 mb-1">Page Slug</label>
              <input type="text" name="new_pages[${index}][page_slug]"
                     id="new_pages_${index}_page_slug" class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required
                     placeholder="e.g., home, about-us, contact">
            </div>

            <div>
              <label for="new_pages_${index}_package_type" class="block text-sm font-medium text-gray-700 mb-1">Package Type</label>
              <select name="new_pages[${index}][package_type]"
                      id="new_pages_${index}_package_type" class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required>
                <option value="">Select Package Type</option>
                <option value="Bespoke">Bespoke</option>
                <option value="Standard">Standard</option>
                <option value="Premium">Premium</option>
              </select>
            </div>
          </div>
        </div>
      </div>
    `;
        }

        function updateFormNumbers() {
            const forms = document.querySelectorAll('.page-form');
            forms.forEach((form, index) => {
                const heading = form.querySelector('h5');
                heading.textContent = `Page ${index + 1}`;
            });
        }
    });
</script>