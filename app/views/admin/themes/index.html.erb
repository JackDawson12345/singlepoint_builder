<!-- app/views/admin/themes/index.html.erb -->
<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Themes</h1>
    <%= link_to "New Theme", new_admin_theme_path, class: "btn btn-primary" %>
  </div>

  <% if @themes.any? %>
    <div class="row">
      <% @themes.each do |theme| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <% if theme.image.attached? %>
              <%= image_tag theme.image, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
            <% else %>
              <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                <i class="fas fa-image fa-3x text-muted"></i>
              </div>
            <% end %>

            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= theme.name %></h5>
              <p class="card-text text-muted flex-grow-1">
                <%= truncate(theme.description, length: 100) %>
              </p>

              <% if theme.pages.present? %>
                <div class="mb-3">
                  <% pages_array = theme.pages.is_a?(Array) ? theme.pages : [theme.pages] %>
                  <% pages_array.first(3).each do |page| %>
                    <span class="badge bg-light text-dark me-1"><%= page %></span>
                  <% end %>
                  <% if pages_array.length > 3 %>
                    <span class="badge bg-secondary">+<%= pages_array.length - 3 %> more</span>
                  <% end %>
                </div>
              <% end %>

              <div class="card-actions mt-auto">
                <%= link_to "View", admin_theme_path(theme), class: "btn btn-outline-primary btn-sm" %>
                <%= link_to "Edit", edit_admin_theme_path(theme), class: "btn btn-primary btn-sm" %>
                <%= link_to "Delete", admin_theme_path(theme), method: :delete,
                            confirm: "Are you sure?", class: "btn btn-outline-danger btn-sm" %>
              </div>
            </div>

            <div class="card-footer text-muted small">
              Created <%= time_ago_in_words(theme.created_at) %> ago
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="fas fa-palette fa-3x text-muted mb-3"></i>
      <h3 class="text-muted">No themes yet</h3>
      <p class="text-muted">Create your first theme to get started.</p>
      <%= link_to "Create Theme", new_admin_theme_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>