<!-- app/views/admin/themes/show.html.erb -->
<div class="min-h-screen">
  <div class="">

    <!-- Theme Header Card -->
    <div class="bg-white shadow-sm border border-gray-200 overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
        <div class="flex-1">
          <h3 class="text-xl leading-6 font-semibold text-gray-900"><%= @theme.name %></h3>
          <p class="mt-2 max-w-2xl text-sm text-gray-600"><%= @theme.description %></p>
        </div>
        <div class="flex flex-wrap gap-2 sm:gap-3">
          <%= link_to "Add Page", admin_add_page_path(@theme),
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
          <%= link_to "Edit Theme", edit_admin_theme_path(@theme),
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
          <%= link_to "Back To Themes", admin_themes_path,
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
        </div>
      </div>
    </div>

    <!-- Theme Pages Section -->
    <div class="mt-8">
      <div class="bg-white shadow-sm border border-gray-200 rounded-xl overflow-hidden">
        <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="bg-indigo-100 p-2 rounded-lg">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
              <div class="ml-4">
                <h2 class="text-xl font-semibold text-gray-900">Theme Pages</h2>
                <% if @theme.pages.nil? %>
                  <p class="text-sm text-gray-600">0 pages configured</p>
                <% else %>
                  <p class="text-sm text-gray-600"><%= @themePages.count %> pages configured</p>
                <% end %>

              </div>
            </div>
            <div class="text-sm text-gray-500">
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
              </svg>
              Drag to reorder
            </div>
          </div>
        </div>

        <div class="p-6">
          <% unless @themePages.nil? %>
            <div id="theme-pages-container" class="grid gap-6">
              <% @themePages.sort_by { |name, data| data['position'].to_i }.each_with_index do |themePage, index| %>
                <div class="draggable-page group relative bg-white border border-gray-200 rounded-xl p-6 hover:shadow-lg hover:border-indigo-300 transition-all duration-200 cursor-move"
                     draggable="true"
                     data-theme-page-id="<%= themePage[1]['theme_page_id'] %>"
                     data-page-name="<%= themePage[0] %>">

                  <!-- Drag Handle -->
                  <div class="absolute left-2 top-1/2 transform -translate-y-1/2 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
                      <path d="M6 6a2 2 0 110-4 2 2 0 010 4zM6 12a2 2 0 110-4 2 2 0 010 4zM6 18a2 2 0 110-4 2 2 0 010 4z"></path>
                    </svg>
                  </div>

                  <div class="flex items-start justify-between ml-8">
                    <div class="flex-1">
                      <div class="flex items-center mb-3">
                        <span class="capitalize inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                          <%= themePage[0] %>
                        </span>
                        <span class="ml-3 text-sm text-gray-500">
                          <%= pluralize(themePage[1]['components'].count, 'Component') %>
                        </span>
                        <span class="ml-3 text-xs text-gray-400">
                          Position: <%= themePage[1]['position'] %>
                        </span>
                      </div>

                      <!-- Components List -->
                      <% if themePage[1]['components'].any? %>
                        <div class="mt-4">
                          <h4 class="text-sm font-medium text-gray-700 mb-2">Components:</h4>
                          <div class="flex flex-wrap gap-2">
                            <% themePage[1]['components'].each do |pageComponent| %>
                              <% component = Component.find(pageComponent['component_id']) %>
                              <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium bg-gray-100 text-gray-700 border">
                                <svg class="w-3 h-3 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.78 0-2.678-2.153-1.415-3.414l5-5A2 2 0 009 9.172V5L8 4z"/>
                                </svg>
                                <%= component.name %>
                              </span>
                            <% end %>
                          </div>
                        </div>
                      <% else %>
                        <div class="mt-4 p-4 bg-gray-50 rounded-lg">
                          <p class="text-sm text-gray-500 italic">No components added yet</p>
                        </div>
                      <% end %>
                    </div>

                    <!-- Action Buttons -->
                    <div class="ml-6 flex flex-col sm:flex-row gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                      <% if @theme.website_count(@theme) >= 1 %>
                        <a class="line-through inline-flex items-center px-3 py-2 text-sm font-medium text-indigo-600 bg-indigo-50 border border-indigo-200 rounded-lg hover:bg-indigo-100 hover:border-indigo-300 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          </svg>
                          Manage
                        </a>
                      <% else %>
                        <%= link_to admin_theme_page_path(id: @theme.id, theme_page_id: themePage[1]['theme_page_id']),
                                    class: "inline-flex items-center px-3 py-2 text-sm font-medium text-indigo-600 bg-indigo-50 border border-indigo-200 rounded-lg hover:bg-indigo-100 hover:border-indigo-300 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" do %>
                          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          </svg>
                          Manage
                        <% end %>
                      <% end %>
                      <%= link_to admin_dashboard_path(id: @theme.id, theme_page_id: themePage[1]['theme_page_id']),
                                  class: "inline-flex items-center px-3 py-2 text-sm font-medium text-gray-600 bg-gray-50 border border-gray-200 rounded-lg hover:bg-gray-100 hover:border-gray-300 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2" do %>
                        <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16" id="Eye--Streamline-Bootstrap" height="16" width="16">
                          <path d="M16 8s-3 -5.5 -8 -5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66 -2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-0.086 0.13 -0.195 0.288c-0.335 0.48 -0.83 1.12 -1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879 -1.168 -5.168 -2.457A13 13 0 0 1 1.172 8z" stroke-width="1"></path>
                          <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0 -5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1 -7 0" stroke-width="1"></path>
                        </svg>
                        Preview
                      <% end %>
                      <%= link_to admin_themes_path,
                                  class: "inline-flex items-center px-3 py-2 text-sm font-medium text-red-600 bg-red-50 border border-red-200 rounded-lg hover:bg-red-100 hover:border-red-300 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2",
                                  data: { confirm: "Are you sure you want to delete this page?" } do %>
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                        Delete
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-12">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <h3 class="mt-4 text-lg font-medium text-gray-900">No pages yet</h3>
              <p class="mt-2 text-gray-500">Get started by creating your first theme page.</p>
              <div class="mt-6">
                <%= link_to admin_dashboard_path(id: @theme.id),
                            class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-semibold rounded-lg shadow-sm hover:bg-indigo-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                  </svg>
                  Add First Page
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Navigation Footer -->
    <div class="mt-8 flex justify-between items-center">
      <%= link_to admin_themes_path,
                  class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-600 bg-white border border-gray-300 rounded-lg shadow-sm hover:bg-gray-50 hover:shadow-md transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Themes
      <% end %>

      <div class="text-sm text-gray-500">
        Last updated <%= time_ago_in_words(@theme.updated_at) %> ago
      </div>
    </div>
  </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        let draggedElement = null;
        let placeholder = null;

        // Theme Pages Drag and Drop
        document.addEventListener('dragstart', function(e) {
            if (e.target.classList.contains('draggable-page')) {
                draggedElement = e.target;
                e.target.style.opacity = '0.5';
                e.dataTransfer.effectAllowed = 'move';
                e.dataTransfer.setData('text/html', '');

                placeholder = document.createElement('div');
                placeholder.className = 'border-2 border-dashed border-blue-400 rounded-xl p-6 bg-blue-50';
                placeholder.innerHTML = '<div class="text-center text-blue-600 text-sm font-medium">Drop page here</div>';
                placeholder.style.height = draggedElement.offsetHeight + 'px';
            }
        });

        document.addEventListener('dragend', function(e) {
            if (e.target.classList.contains('draggable-page')) {
                e.target.style.opacity = '';
                if (placeholder && placeholder.parentNode) {
                    placeholder.parentNode.removeChild(placeholder);
                }
                placeholder = null;
                draggedElement = null;
            }
        });

        document.addEventListener('dragover', function(e) {
            const container = document.getElementById('theme-pages-container');
            if (!container || !draggedElement) return;

            if (container.contains(e.target) || e.target === container) {
                e.preventDefault();
                e.dataTransfer.dropEffect = 'move';

                if (placeholder && placeholder.parentNode) {
                    placeholder.parentNode.removeChild(placeholder);
                }

                const afterElement = getElementAfter(container, e.clientY);

                if (afterElement) {
                    container.insertBefore(placeholder, afterElement);
                } else {
                    container.appendChild(placeholder);
                }
            }
        });

        document.addEventListener('drop', function(e) {
            const container = document.getElementById('theme-pages-container');
            if (!container || !draggedElement || !placeholder) return;

            if (container.contains(e.target) || e.target === container) {
                e.preventDefault();

                if (placeholder.parentNode) {
                    placeholder.parentNode.insertBefore(draggedElement, placeholder);
                    placeholder.parentNode.removeChild(placeholder);
                }

                updatePagePositions();
            }
        });

        document.addEventListener('dragenter', function(e) {
            const container = document.getElementById('theme-pages-container');
            if (container && (container.contains(e.target) || e.target === container)) {
                e.preventDefault();
            }
        });

        function getElementAfter(container, y) {
            const draggableElements = [...container.querySelectorAll('.draggable-page')].filter(child => {
                return child !== draggedElement;
            });

            let closestElement = null;
            let closestDistance = Number.POSITIVE_INFINITY;

            draggableElements.forEach((child) => {
                const box = child.getBoundingClientRect();
                const distance = y - (box.top + box.height / 2);

                if (distance < 0 && Math.abs(distance) < closestDistance) {
                    closestDistance = Math.abs(distance);
                    closestElement = child;
                }
            });

            return closestElement;
        }

        function updatePagePositions() {
            const container = document.getElementById('theme-pages-container');
            if (!container) return;

            const pages = container.querySelectorAll('.draggable-page');
            const positions = [];

            pages.forEach((page, index) => {
                const themePageId = page.dataset.themePageId;
                const pageName = page.dataset.pageName;

                if (themePageId) {
                    positions.push({
                        theme_page_id: themePageId,
                        position: index + 1,
                        name: pageName
                    });

                    // Update the position display
                    const positionElement = page.querySelector('.text-xs.text-gray-400');
                    if (positionElement) {
                        positionElement.textContent = `Position: ${index + 1}`;
                    }
                }
            });

            const themeId = '<%= @theme.id %>';

            // Add visual feedback
            const originalCursor = document.body.style.cursor;
            document.body.style.cursor = 'wait';

            fetch(`/admin/themes/${themeId}/reorder_pages`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content,
                    'Accept': 'application/json'
                },
                body: JSON.stringify({ positions: positions })
            })
                .then(response => {
                    if (response.ok) {
                        // Optional: Show success message
                        showNotification('Pages reordered successfully', 'success');
                    } else {
                        throw new Error('Failed to reorder pages');
                    }
                })
                .catch(error => {
                    console.error('Error reordering pages:', error);
                    showNotification('Failed to reorder pages', 'error');
                })
                .finally(() => {
                    document.body.style.cursor = originalCursor;
                    draggedElement = null;
                });
        }

        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = `fixed top-4 right-4 z-50 px-4 py-3 rounded-lg shadow-lg transition-all duration-300 transform translate-x-full ${
                type === 'success' ? 'bg-green-500 text-white' : 'bg-red-500 text-white'
            }`;
            notification.textContent = message;

            document.body.appendChild(notification);

            // Slide in
            setTimeout(() => {
                notification.style.transform = 'translateX(0)';
            }, 100);

            // Slide out and remove
            setTimeout(() => {
                notification.style.transform = 'translateX(full)';
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.parentNode.removeChild(notification);
                    }
                }, 300);
            }, 3000);
        }
    });
</script>