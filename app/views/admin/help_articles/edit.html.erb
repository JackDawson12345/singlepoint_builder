<%# app/views/admin/help_articles/edit.html.erb %>
<div class="">
  <div class="mb-8">
    <div class="flex items-center gap-x-3 mb-2">
      <%= link_to admin_help_articles_path, class: "text-gray-400 hover:text-gray-500" do %>
        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"/>
        </svg>
      <% end %>
      <h1 class="nata-sans page-title">Edit Help Article</h1>
    </div>
    <p class="nata-sans text-base text-gray-600">Update the details of this help article.</p>
  </div>

  <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
    <div class="px-4 py-6 sm:p-8">
      <%= render "form", help_article: @help_article %>
    </div>
  </div>
</div>