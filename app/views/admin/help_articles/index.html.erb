<%# app/views/admin/help_articles/index.html.erb %>
<div class="">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="nata-sans page-title">Help Articles</h1>
      <p class="nata-sans font-normal text-base">A list of all help articles including their title, priority, author, and creation date.</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to "Add Help Article", admin_new_help_article_path, class: "nata-sans inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto" %>
    </div>
  </div>

  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="nata-sans py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Title</th>
              <th scope="col" class="nata-sans px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Priority</th>
              <th scope="col" class="nata-sans px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Author</th>
              <th scope="col" class="nata-sans px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Images</th>
              <th scope="col" class="nata-sans px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Created</th>
              <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                <span class="sr-only">Actions</span>
              </th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
            <% @help_articles.each do |article| %>
              <tr class="hover:bg-gray-50">
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                  <div class="flex items-center">
                    <div class="h-10 w-10 flex-shrink-0">
                      <div class="h-10 w-10 rounded-full bg-indigo-500 flex items-center justify-center">
                        <svg class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900 nata-sans"><%= article.title %></div>
                    </div>
                  </div>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <span class="nata-sans inline-flex rounded-full px-2 text-xs font-semibold leading-5
                    <%= (article.priority || 0) > 5 ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                      <%= article.priority || 0 %>
                    </span>
                </td>
                <td class="nata-sans whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <%= article.user&.email || 'N/A' %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <span class="nata-sans inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                        No images
                      </span>
                </td>
                <td class="nata-sans whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <%= article.created_at.strftime("%b %d, %Y") %>
                </td>
                <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                  <%= link_to "View", admin_help_article_path(article), class: "nata-sans text-indigo-600 hover:text-indigo-900 mr-3" %>
                  <%= link_to "Edit", admin_edit_help_article_path(article), class: "nata-sans text-indigo-600 hover:text-indigo-900 mr-3" %>
                  <%= button_to "Delete", admin_help_article_path(article), method: :delete,
                                data: { confirm: "Are you sure you want to delete this help article?" },
                                class: "nata-sans text-red-600 hover:text-red-900 inline" %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <% if @help_articles.empty? %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No help articles</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating a new help article.</p>
      <div class="mt-6">
        <%= link_to "Add Help Article", admin_new_help_article_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
  <% end %>
</div>