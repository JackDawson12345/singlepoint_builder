<%# app/views/admin/help_articles/_form.html.erb %>
<%= form_with(model: [:admin, help_article], local: true, class: "space-y-6") do |form| %>
  <% if help_article.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(help_article.errors.count, "error") %> prohibited this article from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% help_article.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 nata-sans" %>
    <%= form.text_field :title,
                        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm nata-sans",
                        placeholder: "Enter article title" %>
  </div>

  <div>
    <%= form.label :text, "Content", class: "block text-sm font-medium text-gray-700 nata-sans" %>
    <div class="wysiwyg-container mt-1" data-controller="wysiwyg-help">
      <div data-wysiwyg-help-target="editor" class="border border-gray-300 rounded-md"></div>
      <%= form.hidden_field :text,
                            value: help_article.text,
                            data: { wysiwyg_help_target: "input" } %>
    </div>
  </div>

  <div>
    <%= form.label :priority, class: "block text-sm font-medium text-gray-700 nata-sans" %>
    <%= form.number_field :priority,
                          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm nata-sans",
                          placeholder: "0" %>
    <p class="mt-2 text-sm text-gray-500 nata-sans">Higher priority articles appear first</p>
  </div>

  <div>
    <%= form.label :keywords, class: "block text-sm font-medium text-gray-700 nata-sans" %>
    <%= form.text_field :keywords_input,
                        value: help_article.keywords.is_a?(Array) ? help_article.keywords.join(', ') : '',
                        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm nata-sans",
                        placeholder: "keyword1, keyword2, keyword3" %>
    <p class="mt-2 text-sm text-gray-500 nata-sans">Separate keywords with commas</p>
  </div>

  <div class="flex items-center justify-end gap-x-3 pt-4 border-t border-gray-200">
    <%= link_to "Cancel", admin_help_articles_path, class: "nata-sans rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    <%= form.submit class: "nata-sans rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
<% end %>