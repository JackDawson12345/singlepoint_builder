<!-- app/views/admin/users/new.html.erb -->
<div class="min-h-screen">
  <div class="">
    <% content_for :title, "New User" %>

    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="nata-sans page-title">Setup User</h1>
          <p class="nata-sans font-normal text-base">Build and configure a new reusable component for your application.</p>
        </div>

        <!-- Breadcrumb -->
        <nav class="flex" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-2 text-sm text-gray-500">
            <li>
              <%= link_to "Back To User", admin_user_path(@user), class: "nata-sans hover:text-gray-700 transition-colors" %>
            </li>
            <li class="flex items-center">
              <svg class="flex-shrink-0 h-4 w-4 mx-2 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-900 font-medium nata-sans">Setup User</span>
            </li>
          </ol>
        </nav>
      </div>
    </div>

    <!-- Form Section -->
    <div class="bg-white overflow-hidden">
      <div class="">
        <%= form_with model: @user, url: admin_update_setup_path(@user), method: :patch, local: true do |form| %>

          <div class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

              <div>
                <%= form.label :domain_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.text_field :domain_name, placeholder: 'package_type', class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
              </div>

              <div>
                <%= form.label :package_type, class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.select :package_type, options_for_select([
                                                                      ['Bespoke', 'bespoke'],
                                                                      ['E-Commerce', 'e-commerce']
                                                                    ]), { prompt: 'Select Package Type' }, { class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500' } %>              </div>

              <div>
                <%= form.label :support_option, class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.select :support_option, options_for_select([
                                                                      ['Do It Myself', 'Do It Myself'],
                                                                      ['I Need Help', 'I Need Help']
                                                                    ]), { prompt: 'Select Support Option' }, { class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500' } %>              </div>

              <div>
                <%= form.label :payment_status, class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.select :payment_status, options_for_select([
                                                               ['Awaiting Payment', 'awaiting payment'],
                                                               ['Completed', 'completed']
                                                             ]), { prompt: 'Payment Status' }, { class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500' } %>
              </div>

            </div>

          </div>

          <div class="pt-4 flex gap-3">
            <%= form.submit "Update Setup", class: "flex-1 bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200 font-medium" %>
            <%= link_to 'Cancel', admin_user_path(@user), class: "flex-1 bg-gray-300 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200 font-medium text-center" %>
          </div>

        <% end %>
      </div>
    </div>


  </div>
</div>

