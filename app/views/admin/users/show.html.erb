<!-- app/views/admin/users/new.html.erb -->
<div class="min-h-screen">
  <div class="">
    <% content_for :title, "New User" %>

    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="nata-sans page-title">Show User</h1>
          <p class="nata-sans font-normal text-base">Build and configure a new reusable component for your application.</p>
        </div>

        <!-- Breadcrumb -->
        <nav class="flex" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-2 text-sm text-gray-500">
            <li>
              <%= link_to "Users", admin_users_path, class: "nata-sans hover:text-gray-700 transition-colors" %>
            </li>
            <li class="flex items-center">
              <svg class="flex-shrink-0 h-4 w-4 mx-2 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-900 font-medium nata-sans">Show</span>
            </li>
          </ol>
        </nav>
      </div>
    </div>

    <!-- Form Section -->
    <div class="bg-white overflow-hidden">
      <div class="">
        <div class="">
          <div class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 py-3 border-b border-gray-100">
              <div class="md:col-span-1">
                <span class="nata-sans text-sm font-medium text-gray-600">First Name:</span>
              </div>
              <div class="md:col-span-2">
                <span class="nata-sans text-sm text-gray-900"><%= @user.first_name.presence || '-' %></span>
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 py-3 border-b border-gray-100">
              <div class="md:col-span-1">
                <span class="nata-sans text-sm font-medium text-gray-600">Last Name:</span>
              </div>
              <div class="md:col-span-2">
                <span class="nata-sans text-sm text-gray-900"><%= @user.last_name.presence || '-' %></span>
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 py-3 border-b border-gray-100">
              <div class="md:col-span-1">
                <span class="nata-sans text-sm font-medium text-gray-600">Email:</span>
              </div>
              <div class="md:col-span-2">
                <span class="nata-sans text-sm text-gray-900"><%= @user.email %></span>
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 py-3 border-b border-gray-100">
              <div class="md:col-span-1">
                <span class="nata-sans text-sm font-medium text-gray-600">Role:</span>
              </div>
              <div class="md:col-span-2">
                <% if @user.role == 0 %>
                  <span class="nata-sans inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Admin</span>
                <% elsif @user.role == 1 %>
                  <span class="nata-sans inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Customer</span>
                <% else %>
                  <span class="nata-sans inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Unknown</span>
                <% end %>
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 py-3 border-b border-gray-100">
              <div class="md:col-span-1">
                <span class="nata-sans text-sm font-medium text-gray-600">Created:</span>
              </div>
              <div class="md:col-span-2">
                <span class="nata-sans text-sm text-gray-900"><%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 py-3">
              <div class="md:col-span-1">
                <span class="nata-sans text-sm font-medium text-gray-600">Last Updated:</span>
              </div>
              <div class="md:col-span-2">
                <span class="nata-sans text-sm text-gray-900"><%= @user.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
              </div>
            </div>
          </div>
        </div>
        <div class="pt-4 flex gap-3">
          <%= link_to 'Edit User', admin_edit_user_path(@user), class: "nata-sans flex-1 bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200 font-medium text-center" %>
          <%= link_to 'Change Password', admin_edit_password_path(@user), class: "nata-sans flex-1 bg-indigo-500 text-white py-2 px-4 rounded-md hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200 font-medium text-center" %>
          <%= link_to 'Setup User', admin_user_setup_path(@user), class: "nata-sans flex-1 bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200 font-medium text-center" %>
          <%= link_to 'Back to Users', admin_users_path, class: "nata-sans flex-1 bg-red-500 text-white py-2 px-4 rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200 font-medium text-center" %>
        </div>
      </div>
    </div>


  </div>
</div>