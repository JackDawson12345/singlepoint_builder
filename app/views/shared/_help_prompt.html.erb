<style>
    /* Help Prompt Styles */
    .help-prompt {
        position: relative;
        display: inline-block;
        cursor: pointer;
    }

    .help-icon {
        width: 16px;
        height: 16px;
        color: #6b7280;
        transition: color 0.2s ease;
    }

    .help-prompt:hover .help-icon {
        color: #374151;
    }

    .help-tooltip {
        position: absolute;
        bottom: 100%;
        left: 50%;
        transform: translateX(-50%);
        margin-bottom: 8px;
        padding: 10px 16px;
        background-color: #1f2937;
        color: white;
        border-radius: 6px;
        font-size: 14px;
        line-height: 1.4;
        white-space: nowrap;
        min-width: 300px;
        white-space: normal;
        text-align: left;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.2s ease, visibility 0.2s ease;
        z-index: 1000;
    }

    /* Arrow pointing down */
    .help-tooltip::after {
        content: "";
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%);
        border: 5px solid transparent;
        border-top-color: #1f2937;
    }

    .help-prompt:hover .help-tooltip {
        opacity: 1;
        visibility: visible;
    }
</style>