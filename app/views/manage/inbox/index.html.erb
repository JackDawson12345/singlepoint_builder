        </svg>
      </div>
    </div>
    <div>
      <%= form_with url: manage_search_form_path, method: :post, data: { turbo: false }, id: "quick-search-form" do |form| %>
        <%= form.text_field :search,
                            class: 'border rounded w-full pr-3 py-2 pl-8 nata-sans text-sm',
                            autocomplete: 'off',
                            id: 'quick-search-input',
                            placeholder: 'Search...' %>
      <% end %>
    </div>
    <div>
      <div class="mb-2">
        <p class="nata-sans text-gray-500 text-sm">All Messages</p>
      </div>
      <div class="space-y-4" id="chat-list-container">
        <% @chats.each do |chat| %>
          <% chat_info = @chat_data[chat.id] %>
          <div onclick="openInboxChat('<%= chat.id %>')" class="flex gap-2 items-center inbox-chat-<%= chat.id %> cursor-pointer">
            <div class="">
              <div class="bg-green-500 p-2 rounded-full w-12 h-12">
                <%= image_tag 'single-point-small-white-logo.png', class: '' %>
              </div>
            </div>
            <div class="w-3/5">
              <p class="text-sm font-bold nata-sans">SinglePoint Support</p>
              <p class="text-xs font-base nata-sans text-gray-500"><%= chat_info[:preview] %></p>
            </div>
            <div class="w-1/5 flex flex-col items-end gap-0.5">
              <p class="text-xs font-base nata-sans text-gray-500 text-right"><%= chat_info[:time] %></p>
              <% if chat_info[:unread_count] > 0 %>
                <div class="w-4 h-4 bg-red-500 rounded-full flex items-center justify-center">
                  <p style="font-size: 0.5rem" class="nata-sans text-white"><%= chat_info[:unread_count] %></p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </div>
  <div class="w-7/10 bg-gray-50 rounded-lg p-4" style="min-height: calc(100vh - 144px); max-height: calc(100vh - 144px);">
    <div class="inbox-chat-notice">
      <% if @chats.empty? %>
        <p>Create New Chat</p>
      <% else %>
        <p>Click A Chat On the Left To view your chat</p>
      <% end %>
    </div>
    <div class="inbox-chat-area space-y-3">

    </div>
  </div>
</div>